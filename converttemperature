temp = input("C or F: ")
temp = temp.upper()
if temp == "F":
    fahr_temp = float(input("Temperature in Fahrenheit: "))
    Cels_temp = (fahr_temp - 32) / 1.8
    print(f"{Cels_temp: .2f}")
elif temp == "C":
    cels_temp = float(input("Temperature in Celsius: "))
    Fahr_temp = (1.8 * cels_temp) + 32
    print(f"{Fahr_temp: .2f}")
else:
    print("Wrong input.")

    print("Wrong input.")

